.breadcrumbs
  color black
  mb 15px
  &__href
    color inherit
    fontify 14px 400 18px
    border-bottom 1px solid
    transition .7s border
    &:not([href])
      border-color transparent
    &:hover
      border-color transparent
  &__current
    color inherit
    fontify 14px 400 18px
  &__delim
    display inline-block
    vertical-align top
    margin 0 9px

  & + h1:not([class])
    mt 0