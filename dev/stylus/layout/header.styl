.header
  pos absolute
  t 0
  l 0
  r 0
  z-index 10
  padding 30px 33px 0
  df(flex-start, space-between)
  &__logo
    pos relative
    t -2px
    &-img
      max-width 100%
      max-height 100%
  &__row
    df(center, flex-end)
    & + &
      mt 26px
  &__lang
    &-href
      c white
      fontify 15px 500 15px
      bb(1px, solid, white)
      & + &
        ml 30px
  &__tel
    c white
    fontify 18px 500 18px
    ml 30px
  &__btn
    ml 30px