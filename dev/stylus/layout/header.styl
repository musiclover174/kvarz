.header
  pos absolute
  t 0
  l 0
  r 0
  z-index 10
  padding 30px 33px 0
  df(flex-start, space-between)
  @media $LandscapeMax
    padding 20px 20px 0
  @media $PortraitMax
    pos fixed
    bgc white
    padding 10px 20px
  // &__side
  //   @media $LandscapeMax
  //     dn()
  &__logo
    pos relative
    t -2px
    @media $PortraitMax
      t 0
    &-img
      max-width 100%
      max-height 100%
      @media $PortraitMax
        max-height 55px
  &__row
    df(center, flex-end)
    @media $LandscapeMax
      &:first-child
        dn()
    & + &
      mt 26px
      @media $LandscapeMax
        mt 0
  &__lang
    &-href
      c white
      fontify 15px 500 15px
      bb(1px, solid, white)
      & + &
        ml 30px
  &__tel
    c white
    fontify 18px 500 18px
    ml 30px
  &__btn
    ml 30px
    @media $LandscapeMax
      ml 0
      c #010101
      &:before
        bgc white