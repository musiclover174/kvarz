html,
body
  font-family $os
body
  overflow-x hidden
  overflow-y scroll
  bgc white

.container
  w 100%
  max-width 1150px
  padding 0 50px
  margin 0 auto
  @media $desktopMax
    max-width 920px
    padding 0 32px
  @media $LandscapeMax
    padding 0 20px

.common
  &__title
    c black
    fontify 60px 500 64px
    mb 18px
    @media $lDesktopSmall
      fontify 48px 500 48px
      mb 29px
    @media $desktopMedium
      fontify 40px 500 40px
    @media $PortraitMax
      mb 20px
  &__subtitle
    c black
    fontify 16px 400 24px
    mb 30px
    max-width 340px
    @media $lDesktopSmall
      fontify 14px 400 22px
    @media $PortraitMax
      max-width inherit
      mb 20px
    &_white
      c white
  &__toall
    pos relative
    c black
    fontify 16px 500 21px
    border-bottom 1px solid $grey
    transition .7s border-color, .7s color
    @media $lDesktopSmall
      fontify 14px 500 21px
    &:hover
      c $red
      border-color transparent
      &:after
        w 40px
  &__back
    pos relative
    ib()
    c black
    fontify 18px 500 21px
    border-bottom 1px solid $grey
    ml 39px
    mt 50px
    transition .7s border
    @media $desktopMax
      fontify 16px 700 18px
      mt 34px
    &:before
      content ""
      pos absolute
      l -39px
      t 3px
      size 31px 18px
      background url('data:image/png;base64,') no-repeat center
      @media $desktopMax
        t 5px
    &:hover
      border-color transparent
  &__label
    db()
    c #a6b0cd
    fontify 14px 400 20px
    mb 5px
    span 
      c white
      font-size 15px
  &__input
    w 100%
    h 38px
    padding 0 11px
    border 2px solid #28519c
    bgc transparent
    color white
    font-family $os
    font-size 16px
    line-height 500
    transition .7s border
    @media $lDesktopSmall
      font-size 15px
    &:focus
      border-color white
    &.warning + ^[0]__inperror
      db()
  &__textarea
    padding 6px 11px
    w 100%
    h 216px
    border 2px solid #28519c
    bgc transparent
    color white
    font-family $os
    font-size 16px
    line-height 500
    line-height 25px
    transition .7s border
    resize none
    oh()
    &:focus
      border-color white
    @media $lDesktopSmall
      font-size 15px
      line-height 21px
  &__inperror
    dn()
    c $red
    fontify 12px 400 16px
  &__sbm
    cursor pointer
    font-family $os
    mt 5px
    border-radius 5px
  &__select
    h 36px
    bgc #fff
    border 2px solid $grey
    w auto
    cursor pointer
    transition .5s border
    &.warning
      border-color $red
  &__placeholder
    pos absolute
    z-index -1
    l 0 
    t 0
    color alpha(white, .5)
    fontify 13px 400 35px
    letter-spacing .1em
    text-transform uppercase
    text-overflow ellipsis
    white-space nowrap
    overflow hidden
    max-width 100%
    transition .7s top, .7s line-height
  &__cols
    df()
    @media $PortraitMax
      flex-direction column
  &__col
    w calc(50% - 16px)
    @media $PortraitMax
      w 100%
    & + &
      ml 32px
      @media $PortraitMax
        ml 0
        mt 26px
  &__row
    & + &
      mt 26px
  &__submit
    pos relative
    mt 40px
      
.more
  mt 50px
  df(center, center)
  &_left
    justify-content flex-start

input.warning,
textarea.warning
  border-color $red

input::-webkit-input-placeholder
  color alpha(black, .5)
input::-moz-placeholder
  color alpha(black, .5)
input:-ms-input-placeholder
  color alpha(black, .5)