.search
  mt -8px
  &__form
    pos relative
    max-width 775px
  &__input
    w 100%
    background transparent
    border 0
    border-bottom 2px solid #f0f0f0
    h 52px
    font-size 17px
    c black
    pr 45px
    &::-webkit-input-placeholder
      c $grey
    &::-moz-placeholder
      c $grey
    &:-ms-input-placeholder
      c $grey
    @media $desktopMax
      font-size 15px
    @media $PortraitMedium
      padding 0
      pr 35px
  &__sbm
    pos absolute
    t 13px
    r 0
    size 21px 21px
    background url('data:image/png;base64,') no-repeat center
    transition .7s opacity
    &:hover
      opacity .5
    @media $PortraitMedium
      r 0
  &__text
    c black
    fontify 17px 400 23px
    mt 24px
    @media $desktopMax
      fontify 15px 500 21px
    span
      c $blue
  &__list
    mt 68px
    max-width 850px
  &__item
    & + &
      mt 48px
    &-href
      c black
      fontify 20px 600 26px
      bb(1px, solid, black)
      @media $desktopMax
        fontify 18px 600 24px
      span
        c $blue
    &-text
      c black
      fontify 17px 400 23px
      mt 19px
      @media $desktopMax
        fontify 15px 500 21px
        mt 16px
      span
        c $blue