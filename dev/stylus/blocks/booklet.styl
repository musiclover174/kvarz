.booklet
  df()
  flex-wrap wrap
  mt 69px
  mb -40px
  @media $PortraitMax
    flex-direction column
  &__item
    pos relative
    w calc(50% - 25px)
    pl 70px
    mb 40px
    @media $desktopMax
      w calc(50% - 16px)
      pl 64px
      mb 38px
    @media $PortraitMax
      w 100%
    &:nth-child(2n)
      ml 50px
      @media $desktopMax
        ml 32px
      @media $PortraitMax
        ml 0
        mt 19px
    &:before
      content ""
      pos absolute
      t 6px
      l 24px
      size 26px 34px
      background url('data:image/png;base64,') no-repeat center
      @media $desktopMax
        l 19px
    &-href
      c black
      fontify 17px 500 23px
      bb(1px, solid, black)
      @media $desktopMax
        fontify 15px 500 21px
    &-info
      c $grey
      fontify 16px 400 20px
      mt 5px
      @media $desktopMax
        fontify 14px 400 20px