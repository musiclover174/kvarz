.history
  &__info
    pos relative
    z-index 1
    padding 94px 0
    min-height 80vh
  &__bg
    pos absolute
    z-index -1
    t 0
    l 50%
    size 100vw 100%
    transform translateX(-50%)
    bgc black
    &-img
      pos absolute
      size 100%
      object-fit cover
      opacity .45
  &__cols
    c white
    df()
    flex-wrap wrap
    @media $PortraitMax
      flex-direction column
  &__col
    pos relative
    w calc(50% - 25px)
    @media $desktopMax
      w calc(50% - 16px)
    @media $PortraitMax
      w 100%
    & + &
      ml 50px
      @media $desktopMax
        ml 32px
      @media $PortraitMax
        ml 0
        mt 25px
  &__title
    fontify 30px 600 34px
    @media $desktopMax
      fontify 24px 600 30px