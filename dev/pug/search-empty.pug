include bemto/bemto.pug

doctype html
html
  head(lang="ru")
    include layout/__head
  body
    include layout/__header
  
    +b('main').main
      .container
        +b('section').text
          +b('section').breadcrumbs
            +e.href(href="#") Главная
            +e('span').delim / 
            +e('span').current Результаты поиска
          h1 Результаты поиска
          +e.content
            +b('section').search
              +e('form').form
                input.search__input(type="text", data-req="req", placeholder="Что будем искать?", value="Баклажан")
                button.search__sbm(type="submit", aria-label="Найти")
              +e('p').text По вашему запросу «
                span Баклажан
                | » ничего не найдено. Попробуйте изменить запрос.
       
    include layout/__footer
    include layout/__scripts