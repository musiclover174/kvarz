include bemto/bemto.pug

doctype html
html
  head(lang="ru")
    include layout/__head
  body
    include layout/__header
  
    +b('main').main
      .container
        +b('section').text
          +b('section').breadcrumbs
            +e.href(href="#") Главная
            +e('span').delim / 
            +e.href(href="#") О предприятии
            +e('span').delim / 
            +e('span').current Лицензии и сертификаты
          h1 Лицензии и сертификаты
          +e.content
            +b('section').docs
              +e('span').decor._decor1
              +e('span').decor._decor2
              +e.item(href="#", target="_blank")
                +e('p').item-name Сертификат системы менеджмента ISO 9001 : 2015
                +e('p').item-info pdf, 3.2 мб
                +e.item-img(src="img/doc1.jpg")
              +e.item(href="#")
                +e('p').item-name Сертификат системы менеджмента качества ISO 9001 : 2015(R)
                +e('p').item-info pdf, 3.2 мб
                +e.item-img(src="img/doc2.jpg")
              +e.item(href="#")
                +e('p').item-name Политика в области качества П 01-19
                +e('p').item-info pdf, 3.2 мб
                +e.item-img(src="img/doc3.jpg")
              +e.item(href="#")
                +e('p').item-name Цели в области качества
                +e('p').item-info pdf, 3.2 мб
                +e.item-img(src="img/doc4.jpg")
            +b('section').more
              +e(type="button").button.btn Показать еще
       
    include layout/__footer
    include layout/__scripts